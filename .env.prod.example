# Production Environment Variables
# Скопируйте этот файл в .env и заполните реальными значениями

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_TELEGRAM_ID=your_telegram_user_id_here

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4

# Database Configuration
POSTGRES_DB=ai_chat_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/ai_chat_bot

# Redis Configuration (опционально)
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_exactly_32_characters

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
PORT=3000

# File Upload Configuration
MAX_FILE_SIZE=20971520
ALLOWED_FILE_TYPES=txt,pdf,docx,jpg,jpeg,png,gif,webp

# Docker Configuration
YARN_PRODUCTION=true

# Deployment Notification (опционально)
DEPLOY_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# SSL Configuration (если используется)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
